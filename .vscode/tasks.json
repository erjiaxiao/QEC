{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build cuda project",
            "type": "shell",
            "command": "/usr/local/cuda-11.7/bin/nvcc",
            "args": [
                "-I",
                "./include/",
                "-g",
                "-G",
                "./src/main.cu",
                "-o",
                "executest"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiler task.",
            "options": {
                "cwd": "${workspaceFolder}/gpu_code/cuda/"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}